<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" />
            <Label text="Time taken: " textFill="#c2c2c2" StackPane.alignment="TOP_LEFT">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="timeTaken" text="..." textFill="#c2c2c2" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets left="72.0" />
               </StackPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </StackPane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="mandelb" mnemonicParsing="false" onAction="#setFractalParam" prefHeight="37.0" prefWidth="128.0" selected="true" text="Mandelbrot">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <toggleGroup>
                  <ToggleGroup fx:id="fractalType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="julia" mnemonicParsing="false" onAction="#setFractalParam" text="Julia" toggleGroup="$fractalType">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </RadioButton>
            <Region prefHeight="37.0" prefWidth="298.0" />
            <Label text="Max iterations: ">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="3.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Slider fx:id="slider" blockIncrement="1.0" max="200.0" minorTickCount="4" prefHeight="0.0" prefWidth="320.0" showTickLabels="true" showTickMarks="true" value="30.0">
               <HBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </padding>
            </Slider>
         </children>
      </HBox>
   </top>
</BorderPane>
