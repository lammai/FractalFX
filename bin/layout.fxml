<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="930.0" width="930.0" />
            <Label text="Time taken: " textFill="WHITE" StackPane.alignment="TOP_LEFT">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="timeTaken" text="..." textFill="WHITE" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets left="72.0" />
               </StackPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </StackPane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="mandelb" mnemonicParsing="false" onAction="#setFractalParam" selected="true" text="Mandelbrot">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <toggleGroup>
                  <ToggleGroup fx:id="fractalType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="julia" mnemonicParsing="false" onAction="#setFractalParam" text="Julia" toggleGroup="$fractalType">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </RadioButton>
            <Region prefHeight="37.0" prefWidth="346.0" />
            <Label text="Current max iterations: ">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="3.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="currentItr" text="...">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Region prefHeight="37.0" prefWidth="7.0" />
            <TextField fx:id="iterationInput" promptText="Max iterations">
               <HBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="submit" mnemonicParsing="false" onAction="#handleButtonClicked" text="Submit">
               <HBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
